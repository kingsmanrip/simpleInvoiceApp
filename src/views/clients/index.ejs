<%- contentFor('body') %>

<div class="row">
  <div class="col-md-12 mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <h2><i class="fas fa-users"></i> Clients</h2>
      <a href="/clients/create" class="btn btn-primary">
        <i class="fas fa-plus"></i> New Client
      </a>
    </div>
    <hr>
  </div>
</div>

<% if (error) { %>
  <div class="alert alert-danger">
    <%= error %>
  </div>
<% } %>

<% if (success) { %>
  <div class="alert alert-success">
    <%= success %>
  </div>
<% } %>

<div class="card shadow">
  <div class="card-body p-0">
    <% if (clients && clients.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Address</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% clients.forEach(client => { %>
              <tr>
                <td><%= client.name %></td>
                <td><%= client.email || '-' %></td>
                <td><%= client.phone || '-' %></td>
                <td><%= client.address || '-' %></td>
                <td>
                  <div class="btn-group">
                    <a href="/invoices/create?client_id=<%= client.id %>" class="btn btn-sm btn-success">
                      <i class="fas fa-file-invoice"></i> New Invoice
                    </a>
                    <a href="/clients/edit/<%= client.id %>" class="btn btn-sm btn-primary">
                      <i class="fas fa-edit"></i> Edit
                    </a>
                    <a href="/clients/delete/<%= client.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this client?');">
                      <i class="fas fa-trash"></i> Delete
                    </a>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="p-4 text-center">
        <p class="mb-0">No clients found. <a href="/clients/create">Create your first client</a>.</p>
      </div>
    <% } %>
  </div>
</div>